{
  "api_keys": {
    "openai": "",
    "stability": "",
    "leonardo": "",
    "elevenlabs": ""
  },
  "services": {
    "cache": {
      "enable_caching": true,
      "cache_dir": "~/.valluvarai/cache",
      "max_cache_size_mb": 1000,
      "cache_expiry_days": 30
    },
    "image_generation": {
      "provider": "openai",
      "model": "dall-e-3",
      "image_size": "1024x1024",
      "fallback_to_placeholder": true,
      "output_dir": "generated/images"
    },
    "audio_generation": {
      "provider": "elevenlabs",
      "tamil_voice_id": "pNInz6obpgDQGcFmaJgB",
      "english_voice_id": "EXAVITQu4vr4xnSDxMaL",
      "output_dir": "generated/audio"
    },
    "video_generation": {
      "default_fps": 24,
      "default_duration": 45,
      "add_music": true,
      "default_transition": "crossfade",
      "enable_effects": true,
      "subtitle_style": "FontSize=24,Alignment=2,BorderStyle=3,Outline=1,Shadow=0,MarginV=25",
      "output_dir": "generated/videos",
      "music_path": "valluvarai/resources/music"
    },
    "insight_engine": {
      "model": "gpt-3.5-turbo",
      "cache_results": true
    },
    "text_generation": {
      "provider": "openai",
      "model": "gpt-3.5-turbo",
      "temperature": 0.7,
      "max_tokens": 1000,
      "fallback_to_template": true
    }
  },
  "ui": {
    "default_language": "both",
    "default_include_images": true,
    "default_include_video": false,
    "theme_color": "#4a148c",
    "accent_color": "#ff6e40",
    "font_family": "Arial, sans-serif"
  }
}
